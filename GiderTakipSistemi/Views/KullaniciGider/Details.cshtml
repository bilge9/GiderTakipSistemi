@model GiderTakipSistemi.Models.GiderFis

@{
    ViewData["Title"] = "Gider Detayı";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Tarih.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Tutar</dt>
        <dd class="col-sm-10">@Model.Tutar</dd>

        <dt class="col-sm-3">Gider Kalemi</dt>
        <dd class="col-sm-9">@Model.GiderKalem?.KalemAdi</dd>

        <dt class="col-sm-3">Cari Adı</dt>
        <dd class="col-sm-9">@Model.CariKayit?.AdSoyad</dd>

        <dt class="col-sm-3">Telefon</dt>
        <dd class="col-sm-9">@Model.CariKayit?.Telefon</dd>

        <dt class="col-sm-3">Adres</dt>
        <dd class="col-sm-9">@Model.CariKayit?.Adres</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/kullaniciGider.css" asp-append-version="true" />
}
