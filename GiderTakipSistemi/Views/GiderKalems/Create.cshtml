@model GiderTakipSistemi.Models.GiderKalem

@{
    ViewData["Title"] = "Create";
}

<h1>Gider Kalemi Oluştur</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="KalemAdi" class="form-control" />
                <span asp-validation-for="KalemAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background: #f5f7fa;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }
    .btn-primary{
        margin-top: 10px;
        border-radius: 12px;
        padding: 8px 20px;
        background: linear-gradient(135deg, #1cc88a, #13855c);
        border: none;
        color: #fff;
        font-weight: 600;
    }
    .btn-primary:hover{
            background: linear-gradient(135deg, #13855c, #0f5e42);
    }
</style>