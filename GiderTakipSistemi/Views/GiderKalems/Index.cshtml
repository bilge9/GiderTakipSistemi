@model IEnumerable<GiderTakipSistemi.Models.GiderKalem>

<div class="giderkalem-card">
    <h1>Gider Kalemleri</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kalem Ekle</a>
    </p>

    <table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KalemAdi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KalemAdi)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/giderkalem.css" asp-append-version="true" />
}
