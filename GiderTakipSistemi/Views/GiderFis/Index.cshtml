@model IEnumerable<GiderTakipSistemi.Models.GiderFis>

@{
    ViewData["Title"] = "Tüm Giderler";
}

<h2>Tüm Kullanıcıların Giderleri</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Gider Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Tarih</th>
            <th>Tutar</th>
            <th>Cari</th>
            <th>Gider Kalemi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.Email</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                <td>@item.Tutar</td>
                <td>@item.CariKayit?.AdSoyad</td>
                <td>@item.GiderKalem?.KalemAdi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
