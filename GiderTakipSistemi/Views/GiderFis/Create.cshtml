@model GiderTakipSistemi.Models.GiderFis

@{
    ViewData["Title"] = "Yeni Gider Fişi";
}

<div class="gider-form">
    <h1>Yeni Gider Fişi</h1>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Tarih" class="control-label"></label>
            <input asp-for="Tarih" class="form-control" type="date" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Tutar" class="control-label"></label>
            <input asp-for="Tutar" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Tutar" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Cari</label>
            <select asp-for="CariKayitId" asp-items="ViewBag.CariList" class="form-control"></select>
        </div>

        <div class="form-group mb-3">
            <label>Gider Kalemi</label>
            <select asp-for="GiderKalemId" asp-items="ViewBag.KalemList" class="form-control"></select>
        </div>

        <div class="form-group mb-3">
            <label>Kullanıcı</label>
            <select asp-for="UserId" asp-items="ViewBag.UserList" class="form-control"></select>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/giderfis.css" asp-append-version="true" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
