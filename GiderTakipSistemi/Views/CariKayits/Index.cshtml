@model IEnumerable<GiderTakipSistemi.Models.CariKayit>

@{
    ViewData["Title"] = "Cari Kayıtlar";
}

<div class="cariler-card">
    <h1>Cari Kayıtlar</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Cari Ekle</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                <th>@Html.DisplayNameFor(model => model.Adres)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                    <td>@Html.DisplayFor(modelItem => item.Adres)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/cariler.css" asp-append-version="true" />
}
