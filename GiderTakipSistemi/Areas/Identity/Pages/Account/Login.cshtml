@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-container">
    <div class="login-box">
        <h1>@ViewData["Title"]</h1>

                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="kullaniciadi" />
                        <label asp-for="Input.UserName">Kullanıcı Adı</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi unuttunuz?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Hesabınız yok mu? Kayıt olun.</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta onayı</a>
                        </p>
                    </div>

                </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
